<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="E1T8.MainPage">

    <Frame BackgroundColor="Purple" Padding="10">
        <Frame BackgroundColor="White">
            <StackLayout>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Button Text="Botón 1" BorderColor="Black" BorderWidth="5" Padding="5" Margin="5" BackgroundColor="Purple" TextColor="White"/>
                    <Button Text="Botón 2" Padding="5" Margin="5" BackgroundColor="Purple" TextColor="White"/>
                    <Button Text="Botón 3" Padding="5" Margin="5" BackgroundColor="Purple" TextColor="White"/>
                </VerticalStackLayout>
                <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="Nombre: " TextColor="Black" Padding="10"/>
                    <Entry BackgroundColor="AliceBlue" TextColor="Black" MinimumWidthRequest="200"/>
                </HorizontalStackLayout>
            </StackLayout>
        </Frame>
    </Frame>

</ContentPage>
